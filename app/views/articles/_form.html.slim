#editor.editor.container-fluid
  = bootstrap_form_with(model: @article, inline_errors: true, local: true) do |f|
    .row.editor-body
      .col-12.title-area
        = f.text_area :title, hide_label: true, placeholder: 'Title (最大100文字）',
        -                             autofocus: true,
        -                             class: 'textarea-title', tabindex: '1'
      .col-md-6.input-area
        = f.text_area :content, class: 'textarea-content', tabindex: '2',
        -                           placeholder: 'markdown', 
        -                           "v-model" => "input"
      .col-md-6.d-none.d-md-block.preview-area
        label
          | Preview
        #preview_area.textarea-perview.article-style.overflow-auto[v-html="input | marked"]

    .editor-footer
      = f.hidden_field :article_token, :value => params[:article_token]
      = f.submit yield(:btn_name), class: 'btn btn-primary btn-submit-editor', tabindex: '3'
script
  |  window.addEventListener('turbolinks:load', function () { new Vue({ el: '#editor', data: { input: '<ruby code="== j@article.content"></ruby>', }, filters: { marked: marked, }, }); }); 
